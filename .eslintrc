{
  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  },
  "settings": {
    "import/parser": "babel-eslint",
    "import/resolve": {
      "moduleDirectory": ["node_modules", "src"]
    },
    // "react": {
    //   "createClass": "createReactClass", // Regex for Component Factory to use, default to "createReactClass"
    //   "pragma": "React",  // Pragma to use, default to "React"
    //   "version": "15.0", // React version, default to the latest React stable release
    //   "flowVersion": "0.53" // Flow version
    // },
    "propWrapperFunctions": [ "forbidExtraProps" ] // The names of any functions used to wrap the propTypes object, such as `forbidExtraProps`. If this isn't set, any propTypes wrapped in a function will be skipped.
  },
  "parser": "babel-eslint",
  "plugins": [
    "react", "import", "jsx-a11y"
  ],
  "rules": {
    "react/jsx-uses-react": 2,
    "react/jsx-uses-vars": 2,
    "react/no-multi-comp": 0,
    "import/default": 0,
    "import/no-duplicates": 0,
    "import/named": 0,
    "import/namespace": 0,
    "import/no-unresolved": 0,
    "import/no-named-as-default": 2,
    "comma-dangle": 0,  // not sure why airbnb turned this on. gross!
    "indent": [2, 2, {"SwitchCase": 1}],
    "no-console": 0,
    "no-alert": 0,
    "id-length": 0,
    "no-trailing-spaces": 0,
    "no-nested-ternary": 0,
    "camelcase": [0],
    "semi": 2,
    "eqeqeq": "off",
    "curly": "error",
    "no-cond-assign": 2,
    "no-var": "error"            // 禁用var变量
    // "quotes": ["error", "double"]
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  }
}